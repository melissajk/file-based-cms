<form action="/new" method="post">
  <label for="new_file">Add a new document:</label><br>
  <input placeholder= "file name" name="new_file" type="text">
  <select name="extension">
    <optgroup label="Supported File Types">
      <option value=".txt">.txt</option>
      <option value=".md">.md</option>
    </optgroup>
  </select>
  <button type="submit">Create</button>
</form>
